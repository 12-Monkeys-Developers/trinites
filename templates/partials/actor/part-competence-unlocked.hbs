<div class="col-dice-{{col}} lig-comp-{{row}}"><a class="roll-comp" title="{{localize 'TRINITES.jetCompetence'}}" data-signe="{{signe}}" data-competence="{{competence}}"><i class="fas fa-dice" ></i></a></div>
<div class="col-nom-{{col}} lig-comp-{{row}}">{{getCompetenceLabel signe competence}}</div>
<div class="col-base-{{col}} lig-comp-{{row}}">
  <input name="system.competences.{{signe}}.{{competence}}.baseMetier" type="number" value="{{getCompetence actor signe competence 'baseMetier'}}" placeholder="0" min="0" />
  <input name="system.competences.{{signe}}.{{competence}}.pointsCrea" type="number" value="{{getCompetence actor signe competence 'pointsCrea'}}" placeholder="0" min="0" />
  <input name="system.competences.{{signe}}.{{competence}}.bonusVA" type="number" value="{{getCompetence actor signe competence 'bonusVA'}}" placeholder="0" min="0" />
  <input name="system.competences.{{signe}}.{{competence}}.pointsExp" type="number" value="{{getCompetence actor signe competence 'pointsExp'}}" placeholder="0" min="0" />
</div>
<div class="col-valeur-{{col}} lig-comp-{{row}}"><label>{{getCompetence actor signe competence 'valeur'}}</label></div>