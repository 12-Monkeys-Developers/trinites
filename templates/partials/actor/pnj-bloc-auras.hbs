<div class="zodiaque">
    <h3><i class="fas fa-mars-stroke-v"></i> AURAS</h3>
    {{#if (and unlocked isAutre)}}
        <div class="param">
            <label>Coût pour déployer une aura : </label>
            <select name="system.cout.aura">
                {{#select data.system.cout.aura}}
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                {{/select}}					
            </select>
        </div>
    {{/if}}
    <div class="grid-zodiaque">
        <div class="col-titre titre"><label>Aura</label></div>
        <div class="centrer titre"><label>Cosme</label></div>
        <div class="centrer titre"><label>Corps</label></div>
        <div class="centrer titre"><label>Main</label></div>
        <div class="centrer titre"><label>Epée</label></div>
        <div class="centrer titre"><label>Oeil</label></div>
        <div class="col-vide"></div>
        {{#each auras as |aura id|}}
            <div class="centrer ligne"><a class="roll-aura" data-tooltip="Jet d'aura" data-item-id="{{aura._id}}"><i class="fas fa-dice"></i></a></div>
            <div class="nom-aura ligne" data-item-id="{{aura._id}}">{{aura.name}}</div>
            <div class="centrer ligne"><a class="zone-deploiement" data-tooltip="Non déployée" data-tooltip-direction="UP" data-item-id="{{aura._id}}" data-zone="cosme">{{#if (eq aura.system.deploiement "cosme")}}<i class="fas fa-circle"></i>{{else}}<i class="far fa-circle"></i>{{/if}}</a></div>
            <div class="centrer ligne"><a class="zone-deploiement" data-tooltip="Personnel" data-tooltip-direction="UP" data-item-id="{{aura._id}}" data-zone="corps">{{#if (eq aura.system.deploiement "corps")}}<i class="fas fa-circle"></i>{{else}}<i class="far fa-circle"></i>{{/if}}</a></div>
            <div class="centrer ligne"><a class="zone-deploiement" data-tooltip="Zone 1m de rayon" data-tooltip-direction="UP" data-item-id="{{aura._id}}" data-zone="main">{{#if (eq aura.system.deploiement "main")}}<i class="fas fa-circle"></i>{{else}}<i class="far fa-circle"></i>{{/if}}</a></div>
            <div class="centrer ligne"><a class="zone-deploiement" data-tooltip="Zone 2m de rayon" data-tooltip-direction="UP" data-item-id="{{aura._id}}" data-zone="epee">{{#if (eq aura.system.deploiement "epee")}}<i class="fas fa-circle"></i>{{else}}<i class="far fa-circle"></i>{{/if}}</a></div>
            <div class="centrer ligne"><a class="zone-deploiement" data-tooltip="Zone 1km de rayon" data-tooltip-direction="UP" data-item-id="{{aura._id}}" data-zone="oeil">{{#if (eq aura.system.deploiement "oeil")}}<i class="fas fa-circle"></i>{{else}}<i class="far fa-circle"></i>{{/if}}</a></div>           
            <div class="centrer ligne"><a class="edit-item {{#unless @root.unlocked}}invisible{{/unless}}" data-tooltip="Editer" data-item-id="{{aura._id}}"> <i class="far fa-edit"></i></a></div>
            <div class="centrer ligne"><a class="suppr-item {{#unless @root.unlocked}}invisible{{/unless}}" data-tooltip="Supprimer" data-item-id="{{aura._id}}"><i class="fas fa-times-circle"></i></a></div>
        {{/each}}    
    </div>
</div>