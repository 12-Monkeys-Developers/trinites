<img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="128" width="128" />
<div class="actor-info">
  <div class="actor-infos-line">
    <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Nom" /></h1>
  </div>

  {{#if (eq data.type "trinite")}}
    <div class="actor-infos-line">
      <label>{{localize "TRINITES.label.metier"}}</label>
      <div class="middle-size"><input name="system.metier" type="text" value="{{data.system.metier}}" placeholder="Métier" readonly /></div>
      {{#if hasMetier}}
        {{#if unlocked}}
          <div><a class="delete-metier" title="Supprimer le métier"><i class="fa fa-trash"></i></a></div>
        {{/if}}
      {{/if}}
      <div class="middle-size"><a class="sheet-change-lock" title="{{localize 'TRINITES.label.unlockSheet'}}">
          {{#if unlocked}}<i class="fas fa-lock-open"></i>{{else}}<i class="fas fa-lock" ></i>{{/if}}</a>
      </div>
  </div>
  <div class="actor-infos-line">
    <label>{{localize "TRINITES.label.vieAnterieure"}}</label>
    <div class="auto-size"><input name="system.vieAnterieure" type="text" value="{{data.system.vieAnterieure}}" placeholder="Vie antérieure" readonly /></div>
    {{#if hasVieAnterieure}}{{#if unlocked}}<div><a class="delete-vie-anterieure" title="Supprimer la vie antérieure"><i class="fa fa-trash"></i></a></div>{{/if}}{{/if}}
  </div>
  {{/if}}

  {{#if (eq data.type "archonteRoi")}}
    <div class="actor-infos-line">
      <label>{{localize "TRINITES.label.couverture"}}</label>
      <div class="auto-size">
          <input name="system.couverture" type="text" value="{{data.system.metier}}" placeholder="Couverture - activité apparente" />
      </div>
    </div>
    <div class="actor-infos-line">
      <label>{{localize "TRINITES.label.description"}}</label>
      <div class="auto-size"><input name="system.description" type="text" value="{{data.system.description}}" placeholder="Description" /></div>
    </div>
  {{/if}}
</div>