<div class="lame-soeur">
    <h3><i class="fas fa-khanda"></i> Lame-soeur</h3>
    <div class="grid-lame">
        <label>Messager</label>
        <select name="system.lameSoeur.messager" {{#unless unlocked}}disabled {{/unless}}>
            {{#select data.system.lameSoeur.messager}}
            {{#each config.messagers as |messager keyMessager|}}
                <option value="{{keyMessager}}">{{messager.label}}</option>
            {{/each}}
            {{/select}} 
        </select>
        <div class="centrer"><a class="roll-lame" title="Jet de lame-soeur"><i class="fas fa-dice"></i></a></div>
        <label>Dégâts 4</label>
    </div>
    <div class="desc-lame"><textarea name="system.lameSoeur.description" placeholder="Description de la lame-soeur" {{#unless unlocked}}disabled {{/unless}}>{{data.system.lameSoeur.description}}</textarea></div>
    <h3><i class="fas fa-khanda"></i> Atouts</h3>
    <div class="grid-atout">
        {{#each atouts as |atout id|}}
            <div class="item centrer"><a class="roll-atout" title="Jet d'atout" data-item-id="{{atout._id}}"><i class="fas fa-dice"></i></a></div>
            <div class="nom-atout" data-item-id="{{atout._id}}">{{atout.name}}</div>
            <div class="centrer"><a class="edit-item {{#unless @root.unlocked}}invisible{{/unless}}" title="Editer" data-item-id="{{atout._id}}"> <i class="far fa-edit"></i></a></div>
            <div class="centrer"><a class="suppr-item {{#unless @root.unlocked}}invisible{{/unless}}" title="Supprimer" data-item-id="{{atout._id}}"><i class="fas fa-times-circle"></i></a></div>
        {{/each}}     
    </div>
    {{#if affLamesoeur}}
        {{#each dragons as |dragon id|}}
        <div class="nom-dragon ligne" data-item-id="{{dragon._id}}">{{dragon.name}}</div>
        {{/each}}
    {{/if}}
</div>