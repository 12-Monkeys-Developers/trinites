<div class="theme-astral">
    <h3><i class="fas fa-star"></i> Thème Astral</h3>
    <div class="ligne-theme">
        <label>Archétype</label>
        <select name="data.themeAstral.archetype">
            {{#select data.data.themeAstral.archetype}}
            {{#each config.signes as |signe keySigne|}}
                <option value="{{keySigne}}">{{signe}}</option>
            {{/each}}
            {{/select}} 
        </select>
        {{#if (eq data.type "trinite")}}
            <label>Affinité</label>
            <select name="data.themeAstral.affinite">
                {{#select data.data.themeAstral.affinite}}
                {{#each config.affinites as |affinite keyAffinite|}}
                    <option value="{{keyAffinite}}">{{affinite}}</option>
                {{/each}}
                {{/select}} 
            </select>
        {{/if}}    
    </div>
    <div class="grid-theme">
        <label class="col-ascendant lig-titre">Ascendants</label>
        <select class="col-ascendant lig-theme-1" name="data.themeAstral.ascendant1">
            {{#select data.data.themeAstral.ascendant1}}
            {{#each config.signes as |signe keySigne|}}
                <option value="{{keySigne}}">{{signe}}</option>
            {{/each}}
            {{/select}} 
        </select>
        <select class="col-ascendant lig-theme-2" name="data.themeAstral.ascendant2">
            {{#select data.data.themeAstral.ascendant2}}
            {{#each config.signes as |signe keySigne|}}
                <option value="{{keySigne}}">{{signe}}</option>
            {{/each}}
            {{/select}} 
        </select>
        <label class="col-descendant lig-titre">Descendants</label>
        <select class="col-descendant lig-theme-1" name="data.themeAstral.descendant1">
            {{#select data.data.themeAstral.descendant1}}
            {{#each config.signes as |signe keySigne|}}
                <option value="{{keySigne}}">{{signe}}</option>
            {{/each}}
            {{/select}} 
        </select>
        <select class="col-descendant lig-theme-2" name="data.themeAstral.descendant2">
            {{#select data.data.themeAstral.descendant2}}
            {{#each config.signes as |signe keySigne|}}
                <option value="{{keySigne}}">{{signe}}</option>
            {{/each}}
            {{/select}} 
        </select>
        <select class="col-descendant lig-theme-3" name="data.themeAstral.descendant3">
            {{#select data.data.themeAstral.descendant3}}
            {{#each config.signes as |signe keySigne|}}
                <option value="{{keySigne}}">{{signe}}</option>
            {{/each}}
            {{/select}} 
        </select>
    </div>
</div>