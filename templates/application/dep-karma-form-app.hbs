<form class="karma">
    <div class="entete">
        <div class="titre-entete">Sélectionnez la source de {{#if (eq typeKarma "neutre")}} Karma{{/if}}</div>
        {{#if (eq typeKarma "lumiere")}}<div class="titre-entete">Karma-Lumière</div>{{/if}}
        {{#if (eq typeKarma "tenebre")}}<div class="titre-entete"></div>Karma-Ténèbre</div>{{/if}}
    </div>
    {{#if (eq typeKarma "lumiere")}}
        <div class="grid-karma-2col">
            <div class="col1 titre">Deva</div>
            <div class="col2 titre">Adam'</div>
            <div class="col1"><input name="karmaDeva.valeur" type="number" value="{{karmaDeva.valeur}}" placeholder="0" min="0" max="{{karmaDeva.valeurInit}}" readonly></div>
            <div class="col2"><input name="karmaAdam.valeur" type="number" value="{{karmaAdam.valeur}}" placeholder="0" min="0" max="{{karmaAdam.valeurInit}}" readonly></div>
            <div class="moins"><!-- <i class="fas fa-minus-circle"></i> --><i class="fas fa-arrow-circle-down"></i></div>
            <div class="plus"><!-- <i class="fas fa-plus-circle"></i> --><i class="fas fa-arrow-circle-up"></i></div>
            <div class="moins"><!-- <i class="fas fa-minus-circle"></i> --><i class="fas fa-arrow-circle-down"></i></div>
            <div class="plus"><!-- <i class="fas fa-plus-circle"></i> --><i class="fas fa-arrow-circle-up"></i></div>
        </div>
    {{/if}}
    {{#if (eq typeKarma "tenebre")}}
        <div class="grid-karma-2col">
            <div class="col1 titre">Adam'</div>
            <div class="col2 titre">Archonte</div>            
            <div class="col1"><input name="karmaAdam.valeur" type="number" value="{{karmaAdam.valeur}}" placeholder="0" min="0" max="{{karmaAdam.valeurInit}}"></div>
            <div class="col2"><input name="karmaArchonte.valeur" type="number" value="{{karmaArchonte.valeur}}" placeholder="0" min="0" max="{{karmaArchonte.valeurInit}}"></div>
            <div class="moins"><!-- <i class="fas fa-minus-circle"></i> --><i class="fas fa-arrow-circle-down"></i></div>
            <div class="plus"><!-- <i class="fas fa-plus-circle"></i> --><i class="fas fa-arrow-circle-up"></i></div>
            <div class="moins"><!-- <i class="fas fa-minus-circle"></i> --><i class="fas fa-arrow-circle-down"></i></div>
            <div class="plus"><!-- <i class="fas fa-plus-circle"></i> --><i class="fas fa-arrow-circle-up"></i></div>
        </div>
    {{/if}}
    {{#if (eq typeKarma "neutre")}}
        <div class="grid-karma-3col">
            <div class="col1 titre">Deva</div>
            <div class="col2 titre">Adam'</div>
            <div class="col3 titre">Archonte</div>
            <div class="col1"><input name="karmaDeva.valeur" type="number" value="{{karmaDeva.valeur}}" placeholder="0" min="0" max="{{karmaDeva.valeurInit}}" readonly></div>
            <div class="col2"><input name="karmaAdam.valeur" type="number" value="{{karmaAdam.valeur}}" placeholder="0" min="0" max="{{karmaAdam.valeurInit}}" readonly></div>
            <div class="col3"><input name="karmaArchonte.valeur" type="number" value="{{karmaArchonte.valeur}}" placeholder="0" min="0" max="{{karmaArchonte.valeurInit}}" readonly></div>
            <div class="moins"><!-- <i class="fas fa-minus-circle"></i> --><i class="fas fa-arrow-circle-down"></i></div>
            <div class="plus"><!-- <i class="fas fa-plus-circle"></i> --><i class="fas fa-arrow-circle-up"></i></div>
            <div class="moins"><!-- <i class="fas fa-minus-circle"></i> --><i class="fas fa-arrow-circle-down"></i></div>
            <div class="plus"><!-- <i class="fas fa-plus-circle"></i> --><i class="fas fa-arrow-circle-up"></i></div>
            <div class="moins"><!-- <i class="fas fa-minus-circle"></i> --><i class="fas fa-arrow-circle-down"></i></div>
            <div class="plus"><!-- <i class="fas fa-plus-circle"></i> --><i class="fas fa-arrow-circle-up"></i></div>
        </div>
    {{/if}}
    <div class="grid-pouvoir">
        <div class="data">Coût du pouvoir</div>
        <div class="data"><input name="" type="number" value="{{coutPouvoir}}" readonly></div>
        <div class="data">Karma attribué</div>
        <div class="data"><input name="" type="number" value="0" readonly></div>
    </div>
    <!-- <div>typePouvoir : {{typePouvoir}}</div> -->
</form>