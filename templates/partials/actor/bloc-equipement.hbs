<div class="equipement">
    <h3><i class="fa-solid fa-gun"></i> ARMES</h3> 
    <div class="grid-equipements">        
        <div class="grid-armes">
            <div></div>
            <div class="titre-armes">Nom</div>
            <div class="titre-armes">Dégâts</div>
            <div class="titre-armes">Portée (m)</div>
            <div class="titre-armes">Particularités</div>
            <div></div>
            <div></div>
            {{#each armes as |arme id|}}
                    <div class="col-roll-arme"><a class="roll-arme" title="Jet d'attaque'" data-item-id="{{arme._id}}"><i class="fas fa-dice"></i></a></div>
                    <div class="col-nom-arme">{{arme.name}}</div>
                    <div class="col-degats-arme">{{arme.system.degats}}</div>
                    <div class="col-portee-arme">{{arme.system.portee}}</div>
                    <div class="col-particularites-arme">{{getArmeParticularites arme.system.particularites}}</div>
                    <div class="col-edit-arme"><a class="edit-item {{#unless @root.unlocked}}invisible{{/unless}}" title="Editer" data-item-id="{{arme._id}}"> <i class="far fa-edit"></i></a></div>
                    <div class="col-delete-arme"><a class="suppr-item {{#unless @root.unlocked}}invisible{{/unless}}" title="Supprimer" data-item-id="{{arme._id}}"><i class="fas fa-times-circle"></i></a></div>
            {{/each}}
        </div>       
    </div>
    <h3><i class="fa-regular fa-shield"></i> ARMURES</h3> 
    <div class="grid-equipements">        
        <div class="grid-armures">
            <div></div>
            <div class="titre-armure">Nom</div>
            <div class="titre-armure">Mêlée et Explosifs</div>
            <div class="titre-armure">Tir et Lancer</div>
            <div class="titre-armure">Particularités</div>
            <div></div>
            <div></div>

            {{#each armures as |armure id|}}
                    <div></div>
                    <div class="col-nom-armure">{{armure.name}}</div>
                    <div class="col-protection-melee-armure">{{armure.system.protectionMeleeExplosif}}</div>
                    <div class="col-protection-tir-armure">{{armure.system.protectionTirLancer}}</div>
                    <div class="col-particularites-armure">{{getArmureParticularites armure.system.particularites}}</div>
                    <div class="col-edit-armure"><a class="edit-item {{#unless @root.unlocked}}invisible{{/unless}}" title="Editer" data-item-id="{{armure._id}}"> <i class="far fa-edit"></i></a></div>
                    <div class="col-delete-armure"><a class="suppr-item {{#unless @root.unlocked}}invisible{{/unless}}" title="Supprimer" data-item-id="{{armure._id}}"><i class="fas fa-times-circle"></i></a></div>
            {{/each}}
        </div>       
    </div>
    <h3><i class="fa-regular fa-toolbox"></i> OBJETS</h3> 
    <div class="grid-equipements">        
        <div class="grid-objets">
            <div></div>
            <div class="titre-objet">Nom</div>
            <div class="titre-objet">Description</div>
            <div></div>
            <div></div>
            {{#each objets as |objet id|}}
                    <div></div>
                    <div class="col-nom-objet">{{objet.name}}</div>
                    <div class="col-description-objet">{{{objet.system.description}}}</div>
                    <div class="col-edit-objet"><a class="edit-item {{#unless @root.unlocked}}invisible{{/unless}}" title="Editer" data-item-id="{{objet._id}}"> <i class="far fa-edit"></i></a></div>
                    <div class="col-delete-objet"><a class="suppr-item {{#unless @root.unlocked}}invisible{{/unless}}" title="Supprimer" data-item-id="{{objet._id}}"><i class="fas fa-times-circle"></i></a></div>
            {{/each}}
        </div>       
    </div>
    <h3><i class="fa-regular fa-suitcase"></i> AUTRES</h3>
    {{editor data.system.equipement target="system.equipement" button=true owner=true editable=true}}        
</div>