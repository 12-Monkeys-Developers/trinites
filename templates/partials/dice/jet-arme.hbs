<div class="jet-arme">
    <div class="titre-jet-arme">
        <div class="whisper-logo"><span>message privé </span><i class="far fa-eye-slash"></i></div>
        <div class="bloc-titre">
            <div class="titre"><i class="fas fa-dice"></i> {{stats.competence}} {{stats.valeur}}</div>
            {{#if stats.modifsJet}}<div class="diff">{{#if stats.malusActionLibre}}<i class="fas fa-bolt"></i> {{stats.malusActionLibre}} {{/if}}{{#if stats.difficulte}}<i class="fas fa-tachometer-alt"></i> {{#if (gt stats.difficulte 0)}}+{{/if}}{{stats.difficulte}}{{/if}}</div>{{/if}}
        </div>
    </div>
    <div class="bloc-arme">
        {{#if (eq stats.typeArme "lameSoeur")}}
            <div class="logo"><img src="systems/trinites/images/lames/lame-soeur.png"></div>
        {{else if (eq stats.typeArme "lameNoire")}}
            <div class="logo"><img src="systems/trinites/images/lames/lame-noire.png"></div>
        {{else}}
            <div></div>
        {{/if}}
        <div class="infos-arme">
            <div>
                {{#if (eq stats.typeArme "lameSoeur")}}
                    Lame-Soeur
                {{else}}
                    {{#if (eq stats.typeArme "lameNoire")}}
                    Lame Noire
                    {{else}}
                        {{stats.typeArme}}
                    {{/if}}
                {{/if}}
            </div>
            <div>Dégâts {{stats.arme.degats}}</div>
        </div>
    </div>
    {{#if (eq stats.typeActor "trinite")}}
        <div class="grid-jet-comp">
            <div class="titre-esprit deva">Deva</div>
            <div class="titre-esprit archonte">Archonte</div>
            {{#if (eq stats.resultDeva.dieResult 1)}}
                <div class="dice-back"><div class="roll dice-deva echec-crit">{{stats.resultDeva.dieResult}}</div></div>
            {{else}}
                <div class="dice-back"><div class="roll dice-deva">{{stats.resultDeva.dieResult}}</div></div>
            {{/if}}
    {{/if}}
    {{#if (eq stats.typeActor "archonteRoi")}}
        <div class="grid-jet-comp archonte-roi">
            <div class="titre-archonte-roi">Archonte-roi</div>
            {{#if (eq stats.resultDeva.dieResult 1)}}
                <div class="dice-back"><div class="roll dice-archonte echec-crit">{{stats.resultDeva.dieResult}}</div></div>
            {{else}}
                <div class="dice-back"><div class="roll dice-archonte">{{stats.resultDeva.dieResult}}</div></div>
            {{/if}}
    {{/if}}
        {{#if (eq stats.resultArchonte.dieResult 1)}}
            <div class="dice-back"><div class="roll dice-archonte echec-crit">{{stats.resultArchonte.dieResult}}</div></div>
        {{else}}
            <div class="dice-back"><div class="roll dice-archonte">{{stats.resultArchonte.dieResult}}</div></div>
        {{/if}}
        {{#if (eq stats.resultDeva.dieResult 1)}}
            <div class="dice-total echec-crit">{{stats.resultDeva.rollTotal}}</div>
        {{else}}
            {{#if stats.resultDeva.reussite}}
                <div class="dice-total succes">{{stats.resultDeva.rollTotal}}</div>
            {{else}}
                <div class="dice-total echec">{{stats.resultDeva.rollTotal}}</div>
            {{/if}}
        {{/if}}
        {{#if (eq stats.resultArchonte.dieResult 1)}}
            <div class="dice-total echec-crit">{{stats.resultArchonte.rollTotal}}</div>
        {{else}}    
            {{#if stats.resultArchonte.reussite}}
                <div class="dice-total succes">{{stats.resultArchonte.rollTotal}}</div>
            {{else}}
                <div class="dice-total echec">{{stats.resultArchonte.rollTotal}}</div>
            {{/if}}
        {{/if}}
    </div>
    {{#if (eq stats.resultatJet "detteArchonte")}}
        <div class="btn-dette"><button class="dette archonte" data-actor-id="{{actorId}}" data-esprit="archonte">Dette envers l'Archonte</button></div>
    {{/if}}
    {{#if (eq stats.resultatJet "detteDeva")}}
        <div class="btn-dette"><button class="dette deva" data-actor-id="{{actorId}}" data-esprit="deva">Dette envers le Deva</button></div>
    {{/if}}
</div>