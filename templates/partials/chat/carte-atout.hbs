<div class="whisper-logo"><span>message priv√© </span><i class="far fa-eye-slash"></i></div>
<div class="carte atout" data-item-id="{{atout._id}}" data-actor-id="{{actorId}}">
    <div class="entete">{{atout.name}}</div>
    <div class="grid-carte-atout">
        {{#if (eq atout.data.karma "lumiere")}}
        <div class="couleur">
            <img src="systems/trinites/images/couleurs/blason-{{atout.data.couleur}}.png" title="{{configVal 'couleurs' atout.data.couleur}}">
        </div>
        {{/if}}
        {{#if (eq atout.data.karma "tenebre")}}
        <div class="atout-tenebre">
            <i class="fas fa-moon"></i>
        </div>
        {{/if}}
        <div class="messager">{{configLabel 'epeesFeu' atout.data.messager}}</div>
        <div class="action"><a class="activer atout" title="Utiliser l'atout '{{atout.name}}'"><i class="fas fa-bolt"></i></a></div>
        <div class="titre"><a class="details atout"><i class="fas fa-angle-right"></i></a><label>Effet de l'Atout</label></div>
    </div>
     <div class="desc">{{editor content=atout.data.description target="atout.data.description" owner=true}}</div>
</div>