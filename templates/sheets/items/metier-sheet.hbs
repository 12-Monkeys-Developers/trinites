<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Nom du métier"/></h1>
    </header>
    <div class="sheet-content metier" data-item-id="{{item.id}}">
        <div class="grid-item-metier">
            <label>Signe</label>
            <select name="system.signe">
                {{selectOptions config.signes selected=data.system.signe}}
            </select>
            <label>Points de création</label>
            <input name="system.pc" type="number" value="{{item.system.pc}}"/>            
            <label>Compétence 1</label>
            <select name="system.competence1">
                {{selectOptions config.competencesTriees selected=data.system.competence1}}
            </select>
            <label>Richesse</label>
            <input name="system.richesse" type="number" value="{{item.system.richesse}}"/>            
            <label>Compétence 2</label>
            <select name="system.competence2">
                {{selectOptions config.competencesTriees selected=data.system.competence2}}
            </select>
            <label>Réseau</label>
            <input name="system.reseau" type="number" value="{{item.system.reseau}}"/>            
            <label>Compétence 3</label>
            <select name="system.competence3">
                {{selectOptions config.competencesTriees selected=data.system.competence3}}
            </select>
            <label>Influence</label>
            <input name="system.influence" type="number" value="{{item.system.influence}}"/>
            <label>Nombre de domaines</label>
            <input name="system.nbDomaines" type="number" value="{{item.system.nbDomaines}}"/>
            <label>Domaines</label>
            <input class="domaines" name="system.listeDomaines" type="text" value="{{item.system.listeDomaines}}" placeholder="Liste des domaines séparés par une virgule"/>
        </div>
        <div class="titre-desc">Description</div>
            {{editor descriptionhtml target="system.description" button=true engine="prosemirror" owner=owner editable=editable}}
    </div>
</form>