<div class="zodiaque">
    <h3><i class="fas fa-mars-stroke-v"></i> Zodiaque</h3>
    <div class="grid-zodiaque">
        <div class="col-titre centrer titre"><label>Auras</label></div>
        <div class="centrer titre"><label>Cosme</label></div>
        <div class="centrer titre"><label>Corps</label></div>
        <div class="centrer titre"><label>Main</label></div>
        <div class="centrer titre"><label>Epée</label></div>
        <div class="centrer titre"><label>Oeil</label></div>
        <div class="col-vide"></div>
        {{#each auras as |aura id|}}
            <div class="centrer ligne"><a class="roll-aura" title="Jet d'aura'" data-item-id="{{aura._id}}"><i class="fas fa-dice"></i></a></div>
            <div class="nom-aura ligne">{{aura.name}}</div>
            <div class="centrer ligne"><a class="zone-deploiement" title="Aura zone Cosme (aucune)" data-item-id="{{aura._id}}" data-zone="cosme">{{#if (eq aura.data.deploiement "cosme")}}<i class="fas fa-circle"></i>{{else}}<i class="far fa-circle"></i>{{/if}}</a></div>
            <div class="centrer ligne"><a class="zone-deploiement" title="Aura zone Corps (personnelle)" data-item-id="{{aura._id}}" data-zone="corps">{{#if (eq aura.data.deploiement "corps")}}<i class="fas fa-circle"></i>{{else}}<i class="far fa-circle"></i>{{/if}}</a></div>
            <div class="centrer ligne"><a class="zone-deploiement" title="Aura zone Main (1m de rayon)" data-item-id="{{aura._id}}" data-zone="main">{{#if (eq aura.data.deploiement "main")}}<i class="fas fa-circle"></i>{{else}}<i class="far fa-circle"></i>{{/if}}</a></div>
            <div class="centrer ligne"><a class="zone-deploiement" title="Aura zone Epée (2m de rayon)" data-item-id="{{aura._id}}" data-zone="epee">{{#if (eq aura.data.deploiement "epee")}}<i class="fas fa-circle"></i>{{else}}<i class="far fa-circle"></i>{{/if}}</a></div>
            <div class="centrer ligne"><a class="zone-deploiement" title="Aura zone Oeil (1km de rayon)" data-item-id="{{aura._id}}" data-zone="oeil">{{#if (eq aura.data.deploiement "oeil")}}<i class="fas fa-circle"></i>{{else}}<i class="far fa-circle"></i>{{/if}}</a></div>
            <div class="centrer ligne"><a class="edit-item" title="Editer" data-item-id="{{aura._id}}"> <i class="far fa-edit"></i></a></div>
            <div class="centrer ligne"><a class="suppr-item" title="Supprimer" data-item-id="{{aura._id}}"><i class="fas fa-times-circle"></i></a></div>
        {{/each}}    
    </div>
</div>